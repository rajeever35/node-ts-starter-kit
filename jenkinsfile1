pipeline {
  agent any
  tools {nodejs "node"}
  stages {
    stage('Prepare') {
      steps {
        sh "npm install -g yarn"
      }
    }
    stage('Clone from git') {
      steps {
        git 'https://github.com/rajeever35/node-ts-starter-kit'
      }
    }
    stage('Build') {
      steps {
          script {
              newApp = docker.build("rajeever35/node-ts-starter-kit")
          }
      }
    }
    stage('Test') {
      steps {
         sh 'yarn test'
      }
    }
  }
}
